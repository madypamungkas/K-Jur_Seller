<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryWhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white_smoke</item>
        <item name="colorControlHighlight">@color/light_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryDisabledButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/light_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HintText" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
